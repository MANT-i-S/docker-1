docker run -p 3000:3000 -v ~/:/root --name Abathur -d -it python:2-slim
docker exec Abathur pip install Flask
docker exec Abathur sh -c "echo 'from flask import Flask\napp = Flask(__name__)\n@app.route(\"/\")\ndef hello_world():\n\treturn \"<h1>Hello, World</h1>\"' > ~/app.py"
docker exec -e FLASK_APP=/root/app.py Abathur flask run --host=0.0.0.0 --port 3000

# Docker exec 'name' - execute a command in a container
# Because home directory is mapped with containers root file app.py will be in the container if we create it locally
# To check if works "curl $(docker-machine ip Char):3000"