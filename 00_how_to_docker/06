docker run -d -p 5000:80 --name overlord --restart=always nginx

# -d, --detach — Run container in background and print container ID.
# --name 'name' — Assign a name to the container.
# -p, --publish 'ports' — Publish a container's port(s) to the host.
# -p is a ports mapping <HOST PORT>:<CONTAINER PORT>.

# Restart policies (--restart)
#	'no' - Do not auto restart when it exits. (default option)
#	'on-failure[:max-retries]' - Restart only if the container exits with a non-zero exit status.
#	'unless-stopped' - Restart the container unless it is explicitly stopped or Docker itself is stopped or restarted.
#	'always' - Always restart container regarless of the exit status.
